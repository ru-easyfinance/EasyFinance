dev:
  doctrine:
    param:
      classname: DebugPDO

test:
  doctrine:
    param:
      classname: DebugPDO
      dsn: 'mysql:host=localhost;dbname=DB_NAME'

all:
  doctrine:
    class: sfDoctrineDatabase
    param:
      classname: DoctrinePDO
      dsn: 'mysql:host=DB_HOST;dbname=DB_NAME'
      username: DB_USER
      password: DB_PASS
      encoding: utf8
      persistent: true
      pooling: true
