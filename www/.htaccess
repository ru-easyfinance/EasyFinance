php_flag register_globals Off
php_flag display_errors On

RewriteEngine On
RewriteBase /
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [PT,L]

# TEST SERVER ONLY
AuthType Basic
AuthName "Please, password"
AuthUserFile /var/www/hm/htpasswd
<Limit GET POST>
	Require Valid-User
</Limit>
